{
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.organizeImports": true
  },
  "editor.formatOnSave": true,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "*.test.ts",
    "*.tsx": "*.test.tsx, *.stories.tsx",
    "tsconfig.json": "tsconfig.*.json, tsconfig.tsbuildinfo",
    "package.json": ".eslintrc, .eslintrc.js, .gitattributes, .gitignore, .prettierignore, package-lock.json, playwright.config.ts, remix.env.d.ts, remix.config.js, tsconfig.json, vitest.config.ts, tailwind.config.js, yarn.lock"
  },
  "files.associations": {
    "*.css": "tailwindcss"
  },

  "files.exclude": {
    "**/.cache": true,
    "**/build": true,
    "**/coverage": true,
    "**/node_modules": true
  },
  "search.useGlobalIgnoreFiles": true,
  "search.exclude": {
    "**/node_modules": true,
    "public/build": true,
    "build": true,
    "app/styles": true,
    ".cache": true
  },
  "tailwindCSS.classAttributes": [
    "class",
    "className",
    ".*Class",
    ".*Classes",
    ".*Classes: .*"
  ],
  "tailwindCSS.experimental.classRegex": [
    ["clsx\\(([^)]*)\\)", "'([^']*)'"],
    ["clsx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ]
}
